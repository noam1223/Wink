<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_gravity="center_horizontal"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="?attr/selectableItemBackground">





        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight=".8">

        <View
            android:id="@+id/round_black_view_preview_sub_task_item"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/ic_black_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="34dp"/>


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#682EDC"
            app:layout_constraintRight_toRightOf="@+id/round_black_view_preview_sub_task_item"
            app:layout_constraintLeft_toLeftOf="@+id/round_black_view_preview_sub_task_item"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1.2">


        <TextView
            android:id="@+id/task_name_text_view_preview_sub_task_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="שם המשימה"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/assistant_bold"
            android:textColor="@color/black"/>



        <TextView
            android:id="@+id/task_time_text_view_preview_sub_task_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="דקות המשימה"
            app:layout_constraintRight_toRightOf="@+id/task_name_text_view_preview_sub_task_item"
            app:layout_constraintTop_toBottomOf="@+id/task_name_text_view_preview_sub_task_item"
            android:fontFamily="@font/assistant_regular"
            android:textColor="@color/black"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>