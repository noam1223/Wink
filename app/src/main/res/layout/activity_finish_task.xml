<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FinishTaskActivity">




    <ImageView
        android:id="@+id/top_waves_img_view_finish_task_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_purple_top_waves"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:id="@+id/x_img_view_finish_task_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_x" />


    </LinearLayout>


    <ImageView
        android:id="@+id/star_img_view_finish_task_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/top_waves_img_view_finish_task_activity"
         />






    <TextView
        android:id="@+id/congrats_text_view_finish_task_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="סיימת בהצלחה את המשימה"
        android:textSize="24dp"
        android:fontFamily="@font/assistant_regular"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_waves_img_view_finish_task_activity"
        android:layout_marginTop="28dp"/>




    <TextView
        android:id="@+id/task_name_text_view_finish_task_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עבודה בהיסטוריה"
        android:textSize="30dp"
        android:fontFamily="@font/assistant_bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congrats_text_view_finish_task_activity"
        android:layout_marginTop="10dp"/>


    <ListView
        android:id="@+id/finish_list_view_finish_task_activity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/divider_purple_view_finish_task_activity"
        app:layout_constraintRight_toRightOf="@+id/divider_purple_view_finish_task_activity"
        app:layout_constraintTop_toBottomOf="@+id/task_name_text_view_finish_task_activity"
        app:layout_constraintBottom_toTopOf="@id/divider_purple_view_finish_task_activity"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:overScrollMode="never"/>


    <View
        android:id="@+id/divider_purple_view_finish_task_activity"
        android:layout_width="244dp"
        android:layout_height="1dp"
        android:background="#682EDC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/task_time_text_view_finish_task_activity"
        android:layout_marginBottom="8dp"/>



    <TextView
        android:id="@+id/task_time_text_view_finish_task_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 דקות"
        android:textSize="20dp"
        android:fontFamily="@font/assistant_bold"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/done_btn_finish_task_activity"
        android:layout_marginBottom="40dp"/>






    <Button
        android:id="@+id/done_btn_finish_task_activity"
        android:layout_width="118dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="#682EDC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:text="סיום"
        android:textColor="@color/white"
        android:fontFamily="@font/assistant_regular"/>


</androidx.constraintlayout.widget.ConstraintLayout>