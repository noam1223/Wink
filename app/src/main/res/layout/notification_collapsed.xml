<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/noitification_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingRight="14dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_logo_white"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:background="@drawable/noitification_bg"
            android:backgroundTint="#682EDC"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wink"
            android:textSize="12dp"
            android:layout_marginRight="3dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/name_text_view_notification_collapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/assistant_bold"
        android:textColor="#000000"
        android:text="היי"
        android:layout_marginTop="6dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="center"
        android:layout_marginBottom="8dp">


    <TextView
        android:id="@+id/msg_text_view_notification_collapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/assistant_regular"
        android:textColor="#000000"
        android:text="כאן רושמים משהו"
        android:layout_marginTop="2dp"
        android:paddingLeft="4dp"/>




        <ImageView
            android:id="@+id/img_view_icon_notification_collapsed"
            android:layout_width="24dp"
            android:layout_height="24dp" />



    </LinearLayout>


</LinearLayout>