<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/edit_text_rounded"
        android:layoutDirection="rtl"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/x_img_view_add_task_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_x" />

        </LinearLayout>


        <TextView
            android:id="@+id/my_tasks_text_view_add_task_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_electric_light"
            android:fontFamily="@font/assistant_bold"
            android:text="הוסף משימה"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/head_line_task_name_text_view_add_task_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/ic_pencil"
            android:drawablePadding="8dp"
            android:fontFamily="@font/assistant_bold"
            android:text="שם המשימה"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_tasks_text_view_add_task_pop_up" />


        <EditText
            android:id="@+id/task_name_edit_text_add_task_pop_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="שם המשימה"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head_line_task_name_text_view_add_task_pop_up" />


        <TextView
            android:id="@+id/time_line_task_name_text_view_add_task_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/ic_clock"
            android:drawablePadding="8dp"
            android:fontFamily="@font/assistant_bold"
            android:text="זמן לביצוע המשימה"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_name_edit_text_add_task_pop_up" />


        <EditText
            android:id="@+id/task_time_edit_text_add_task_pop_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/edit_text_rounded"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="00:15 דקות"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_half_arrow"
            android:paddingLeft="14dp"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time_line_task_name_text_view_add_task_pop_up" />


        <Button
            android:id="@+id/save_btn_add_task_pop_up"
            android:layout_width="118dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_rounded"
            android:fontFamily="@font/assistant_regular"
            android:text="שמירה"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:backgroundTint="#682EDC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_time_edit_text_add_task_pop_up" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>