<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constrain_layout_parent_task_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:textDirection="rtl"
    android:background="@drawable/task_item_background">



    <TextView
        android:id="@+id/task_name_text_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="שם המשימה"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/assistant_bold"
        android:textStyle="bold"
        android:textColor="@color/black"/>



    <TextView
        android:id="@+id/task_time_text_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/task_name_text_view_task_item"
        android:text="20 דקות"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_clock"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/assistant_regular"
        android:textColor="@color/black"/>




    <TextView
        android:id="@+id/sub_tasks_num_text_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/task_name_text_view_task_item"
        android:text="6 תתי משימות"
        app:layout_constraintRight_toLeftOf="@id/task_time_text_view_task_item"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_pencil"
        android:drawablePadding="8dp"
        android:layout_marginRight="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/assistant_regular"
        android:textColor="@color/black"/>






    <ImageView
        android:id="@+id/three_dots_img_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="21dp"
        android:padding="4dp"
        android:scaleType="center"/>




    <ImageView
        android:id="@+id/garbage_img_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_garbage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/three_dots_img_view_task_item"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:scaleType="center"/>




    <ImageView
        android:id="@+id/play_img_view_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/garbage_img_view_task_item"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:scaleType="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>