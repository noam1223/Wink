<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        android:background="@drawable/edit_text_rounded">


        <LinearLayout
            android:id="@+id/x_img_view_feedback_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:padding="10dp">


    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/ic_x" />


        </LinearLayout>


        <TextView
            android:id="@+id/head_line_text_view_pop_up_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="רגע לפני שנסיים..."
            android:textAlignment="center"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:fontFamily="@font/assistant_bold"
            android:textSize="24dp"
            android:layout_marginTop="46dp"/>







        <TextView
            android:id="@+id/sub_head_line_text_view_pop_up_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="במהלך המשימה הרגשתי:"
            android:textAlignment="center"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head_line_text_view_pop_up_feedback"
            android:textColor="@color/black"
            android:fontFamily="@font/assistant_bold"
            android:textSize="16dp"
            android:layout_marginTop="36dp"/>




        <LinearLayout
            android:id="@+id/linear_layout_icons_area_pop_up_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/sub_head_line_text_view_pop_up_feedback"
            app:layout_constraintRight_toRightOf="@+id/sub_head_line_text_view_pop_up_feedback"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:weightSum="5">


            <ImageView
                android:id="@+id/grinning_img_view_pop_up_feedback"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_grinning_face"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/smiling_img_view_pop_up_feedback"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_slightly_smiling_face"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/natural_img_view_pop_up_feedback"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_nautral_face"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/rolling_eyes_img_view_pop_up_feedback"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_face_with_rolling_eyes"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/frowning_img_view_pop_up_feedback"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_frowning_face"
                android:layout_weight="1"/>


        </LinearLayout>


        <TextView
            android:id="@+id/sub_two_head_line_text_view_pop_up_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הופתעתי לגלות על עצמי ש..."
            android:textAlignment="center"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_icons_area_pop_up_feedback"
            android:textColor="@color/black"
            android:fontFamily="@font/assistant_bold"
            android:textSize="16dp"
            android:layout_marginTop="24dp"/>


        
        
        <EditText
            android:id="@+id/feedback_edit_text_pop_up_feedback"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/sub_two_head_line_text_view_pop_up_feedback"
            android:background="@drawable/edit_text_rounded"
            android:hint="לדוגמא: בחלוקה למשימות"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:fontFamily="@font/assistant_regular"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" />



        <Button
            android:id="@+id/save_btn_pop_up_feedback"
            android:layout_width="118dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_rounded"
            app:backgroundTint="#682EDC"
            app:layout_constraintTop_toBottomOf="@id/feedback_edit_text_pop_up_feedback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:text="סיום"
            android:textColor="@color/white"
            android:fontFamily="@font/assistant_regular"/>


        
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>